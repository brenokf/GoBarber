{
    "env": {
        "es6": true,
        "node": true
    },
    "extends":[
      "airbnb-base",
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser":"@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugin":[
      "@typescript-eslint",
      "prettier"
    ],

    "rules": {
      "prettier/prettier":"error",
      "class-methods-use-this":"off",
      "import extensions":[
        "error",
        "ingnorePackages",
        {
          "ts":"never"
        }
      ]
    },
    "settings": {
      "import/resolver":{
        "typescript":{}
      }
    }

}
